<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:paddingStart="10dp"
    android:paddingTop="15dp"
    android:background="@color/white"
    android:paddingEnd="10dp"
    android:paddingBottom="15dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/order_item_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@color/gray_white"
            android:scaleType="fitXY" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <com.thallesmarchetti.eshop.Utils.MSPRegalarText
            android:id="@+id/order_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="order item title"
            android:textSize="17sp" />

        <RelativeLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content">

            <com.thallesmarchetti.eshop.Utils.MSPBoldText
                android:id="@+id/order_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="R$ 100"
                android:textSize="15sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/order_item_quantity"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginStart="50dp"
                android:background="@drawable/edite_background"
                android:gravity="center"
                android:padding="5dp"
                android:layout_toEndOf="@id/order_item_price"
                android:text="1"
                android:textSize="18sp" />


        </RelativeLayout>
    </LinearLayout>

    <ImageButton

        android:id="@+id/order_item_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@android:color/transparent"
        android:foreground="?attr/selectableItemBackground"
        android:padding="5dp"
        android:src="@drawable/ic_delete_24"
        android:visibility="visible" />


</LinearLayout>