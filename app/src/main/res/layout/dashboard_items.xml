<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="1dp"
    android:layout_margin="5dp"
    >

    <ImageView
        android:id="@+id/dashboard_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:src="@drawable/background"
        android:scaleType="centerCrop"/>


    <LinearLayout
        android:id="@+id/ll_dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/dashboard_image"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:background="#E3EBED">


        <com.thallesmarchetti.eshop.Utils.MSPBoldText
            android:id="@+id/dashboard_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="title"
            android:textColor="#4C5057"
            android:textStyle="bold"
            android:textSize="12sp"/>

        <com.thallesmarchetti.eshop.Utils.MSPRegalarText
            android:id="@+id/dashboard_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="price"
            android:textColor="#4C5057"
            android:textSize="12sp"/>


    </LinearLayout>


</RelativeLayout>